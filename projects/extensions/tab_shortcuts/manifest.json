{
  "name": "Tab Shortcuts",
  "version": "1.0",
  "description": "Allows pinning and duplication of tabs via keyboard shortcuts.",
  "manifest_version": 2,
  "background": {
    "scripts": ["tab_shortcuts.js"],
    "persistent": false
  },
  "commands": {
    "toggle-pin-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggles whether the current tab is pinned."
    },
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Duplicates the current tab."
    },
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "MacCtrl+Shift+Left"
      },
      "description": "Duplicates the current tab."
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "MacCtrl+Shift+Right"
      },
      "description": "Duplicates the current tab."
    }
  }
}
