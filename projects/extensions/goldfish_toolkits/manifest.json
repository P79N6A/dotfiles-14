{
  "name": "Goldfish Toolkits",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension was created with the awesome goldfishcreativethailand.com",
  "homepage_url": "https://goldfishcreativethailand.com",
  "icons": {
    "16": "icons/geek.png",
    "32": "icons/geek.png",
    "48": "icons/geek.png",
    "128": "icons/geek.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/helpers.js",
      "src/bg/background.js",
      "src/inject/tab_shortcuts.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/geek.png",
    "default_title": "Goldfish Toolkits"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://facebook.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "commands": {
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "Duplicates the current tab."
    },
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "MacCtrl+Shift+Left"
      },
      "description": "Move current tab to the left."
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "MacCtrl+Shift+Right"
      },
      "description": "Move current tab to the right."
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Download photos from Facebook"
    }
  },
  "permissions": [
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "declarativeContent",
    "desktopCapture",
    "downloads",
    "geolocation",
    "history",
    "idle",
    "management",
    "nativeMessaging",
    "notifications",
    "pageCapture",
    "printerProvider",
    "sessions",
    "storage",
    "tabCapture",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "image/*",
    "images/*",
    "img/*",
    "style/*.css",
    "styles/*.css",
    "css/*.css",
    "script/*.js",
    "scripts/*.js",
    "js/*.js",
    "src/*.js",
    "public/*",
    "asset/*",
    "assets/*"
  ]
}
