{
  "name": "Goldfish Toolkits",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension was created with the awesome goldfishcreativethailand.com",
  "homepage_url": "https://goldfishcreativethailand.com",
  "icons": {
    "16": "icons/nerd.png",
    "32": "icons/nerd.png",
    "48": "icons/nerd.png",
    "128": "icons/nerd.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js",
      "src/inject/tab_shortcuts.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/nerd.png",
    "default_title": "Goldfish Toolkits"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
         "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
         "jquery-3.3.1.js",
         "app.js"
      ]
    },
    {
      "matches": [
        "*://*.facebook.com/*/photos/*",
        "*://facebook.com/*/photos/*"
      ],
      "js": [
        "src/inject/facebook.js"
      ]
    }
  ],
  "commands": {
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "Duplicates the current tab."
    },
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left",
        "mac": "MacCtrl+Shift+Left"
      },
      "description": "Move current tab to the left."
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "MacCtrl+Shift+Right"
      },
      "description": "Move current tab to the right."
    }
  },
  "permissions": [
    "activeTab",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "declarativeContent",
    "desktopCapture",
    "downloads",
    "geolocation",
    "history",
    "idle",
    "management",
    "nativeMessaging",
    "notifications",
    "pageCapture",
    "printerProvider",
    "sessions",
    "storage",
    "tabCapture",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ]
}
