{
  "variables": {
    "lang": "en",
    "locale": "en-US",
    "charset": "UTF-8",
    "indentation": "\t",
    "newline": "\n"
  },

  "css": {
    "filters": "css",
    "profile": "css",
    "snippets": {
      "#": "#\\{${1:\\$var}\\}",
      "@r": "@return ${1:result};",
      "@i": "@include ${1:name};",
      "@mx": "@mixin ${1:name}(${2:args}) {\n\t${3:}\n}",
      "@map+": "${1:\\$var}: map-merge((\n\t${2:key}: ${3:value},\n), ${1:\\$var});",
      "@map": "map-get(${1:\\$var}, ${2:\\$key});",
      "@fn": "@function ${1:name}(${2:args}) {\n\t${3}\n}",
      "@ea": "@each ${1:\\$key}, ${2:\\$value} in ${3:\\$var} {\n\t${4:}\n}",
      "@bp+": "@include media-breakpoint-up($1) {\n\t$2\n}",
      "@bp-": "@include media-breakpoint-down($1) {\n\t$2\n}",
      "@s": "/** ${1:SECTION NAME}\n** -------------------------------------------------- **/",
      "@d": "/**\n * |\n */",
      "@c": "/* | */",
      "!g": "!global",
      "!d": "!default",
      "!": "!important"
    },
    "abbreviations": {}
  },

  "html": {
    "filters": "html",
    "profile": "html",
    "snippets": {
      "ec": "<?php echo $1; ?>",
      "prep": "<pre><?php print_r($1); ?></pre>",
      "@s": "<!-- ${1:SECTION NAME}\n--------------------------------------------------------!>",
      "@d": "<!--\n$1\n-->",
      "@c": "<!-- $1 -->"
    },
    "abbreviations": {}
  },

  "xml": {
    "extends": "html",
    "profile": "xml",
    "filters": "html"
  },

  "svg": {
    "filters": "html",
    "profile": "xml",
    "snippets": {},
    "abbreviations": {}
  },

  "xsl": {
    "extends": "html",
    "profile": "xml",
    "filters": "html, xsl",
    "snippets": {},
    "abbreviations": {}
  },

  "haml": {
    "filters": "haml",
    "extends": "html",
    "profile": "xml"
  },

  "jade": {
    "filters": "jade",
    "extends": "html",
    "profile": "xml"
  },

  "jsx": {
    "filters": "jsx, html",
    "extends": "html",
    "profile": "xml"
  },

  "slim": {
    "filters": "slim",
    "extends": "html",
    "profile": "xml"
  },

  "scss": {
    "extends": "css"
  },

  "sass": {
    "extends": "css"
  },

  "less": {
    "extends": "css"
  },

  "stylus": {
    "extends": "css"
  },

  "styl": {
    "extends": "stylus"
  }
}
