{
  "variables": {
    "lang": "en",
    "locale": "en-US",
    "charset": "UTF-8",
    "indentation": "\t",
    "newline": "\n"
  },

  "html": {
    "filters": "html",

    "snippets": {
      "!c": "<!--$1-->",
      "!p": "<p>&nbsp;</p>",
      "e:": "<?php echo ${1:\\$var}; ?>",
      "ph:": "<?php\n\n$1",
      "p:": "<?php$1?>",
      "pre:": "<pre><?php print_r(${1:\\$var}); ?></pre>",
      "prt:": "<?php print($1); ?>",
      "prf:": "<?php printf(${1:string}, ${2:\\$vars}); ?>",
      "prr:": "<?php print_r($1) ?>;"
    },
    "abbreviations": {

    }
  },

  "js": {
    "filters": "html",

    "snippets": {
      "!c": "/*$1*/",
      "!d": "/**\n$1\n*/",
      "!s": "/* ${1:SECTION TITLE}\n-------------------------------------------------- */"
    },
    "abbreviations": {

    }
  },

  "blade": {
    "filters": "html",

    "snippets": {
      "!c": "<!--$1-->",
      "!p": "<p>&nbsp;</p>",
      "p:": "@php\n\t$1\n@endphp",
      "e:": "@php\n\techo ${1:\\$var};\n@endphp",
      "pre:": "@php\n\techo '<pre>'; print_r(${1:\\$var}); echo '</pre>';\n@endphp",
      "prt:": "@php\n\tprint(${1:\\$var});\n@endphp",
      "prf:": "@php\n\tprintf(${1:string}, ${2:\\$vars});\n@endphp",
      "prr:": "@php\n\tprint_r($1);\n@endphp"
    },
    "abbreviations": {

    }
  },

  "css": {
    "filters": "html,css",

    "snippets": {
      "!c": "/*$1*/",
      "!cc": "/**\n$1\n*/",
      "!s": "/* ${1:SECTION TITLE}\n-------------------------------------------------- */"
    },
    "abbreviations": {}
  },

  "source.php": {
    "filters": "html",

    "snippets": {
      "!c": "/*$1*/",
      "!cb": "/**$1*/",
      "!dc": "/**\n$1\n*/",
      "e:": "echo ${1:\\$var};",
      "ph:": "?>\n$1",
      "p:": "?>\n$1\n<?php",
      "pre:": "echo '<pre>'; print_r(${1:\\$var}); echo '</pre>';",
      "prt:": "print($1);",
      "prf:": "printf(${1:string}, ${2:\\$vars});",
      "prr:": "print_r($1);"
    },
    "abbreviations": {}
  }
}
