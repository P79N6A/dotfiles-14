{
  "variables": {
    "lang": "en",
    "locale": "en-US",
    "charset": "UTF-8",
    "indentation": "\t",
    "newline": "\n"
  },

  "html": {
    "filters": "html",

    "snippets": {
      "!c": "<!--$1-->",
      "e:": "<?php echo ${1:\\$var}; ?>",
      "ph:": "<?php\n\n$1",
      "p:": "<?php$1?>",
      "pre:": "<pre><?php print_r(${1:\\$var}); ?></pre>",
      "prt:": "<?php print($1); ?>",
      "prf:": "<?php printf($1, $2); ?>",
      "prr:": "<?php print_r($1) ?>;",
      "!p": "<p>&nbsp;</p>"
    },
    "abbreviations": {

    }
  },

  "css": {
    "filters": "html,css",

    "snippets": {
      "!c": "/*$1*/",
      "!cb": "/**$1*/",
      "!dc": "/**\n$1\n*/"
    },
    "abbreviations": {}
  },

  "source.php": {
    "filters": "html",

    "snippets": {
      "!c": "/*$1*/",
      "!cb": "/**$1*/",
      "!dc": "/**\n$1\n*/",
      "e:": "echo ${1:\\$var};",
      "ph:": "?>\n$1",
      "p:": "?>\n$1\n<?php",
      "pre:": "echo '<pre>'; print_r(${1:\\$var}); echo '</pre>';",
      "prt:": "print($1);",
      "prf:": "printf($1, $2);",
      "prr:": "print_r($1);"
    },
    "abbreviations": {}
  }
}
