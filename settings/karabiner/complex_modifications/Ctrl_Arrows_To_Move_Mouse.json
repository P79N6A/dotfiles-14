{
  "title": "Change ctrl+arrows to move mouse pointer",
  "rules": [
    {
      "description": "Move up if ctrl+up pressed together.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "y": -1200
              },
              "lazy": true
            }
          ]
        }
      ]
    },
    {
      "description": "Move right if ctrl+right pressed together.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "x": 1200
              },
              "lazy": true
            }
          ]
        }
      ]
    },
    {
      "description": "Move down if ctrl+down pressed together.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "y": 1200
              },
              "lazy": true
            }
          ]
        }
      ]
    },
    {
      "description": "Move left if ctrl+left pressed together.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "x": -1200
              },
              "lazy": true
            }
          ]
        }
      ]
    }
  ]
}
