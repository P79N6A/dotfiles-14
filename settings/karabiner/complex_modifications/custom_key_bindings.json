{
  "title": "Complex Key Bindings",
  "rules": [
    {
      "description": "Change F3, F4, F7, F8, F9 to LEFT_CLICK if CAPS_LOCK activate",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_lock activate",
                "value": 1
              }
            },
            {
              "key_code": "vk_none"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "caps_lock activate",
                "value": 0
              }
            },
            {
              "key_code": "vk_none"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f4"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f7"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f8"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f9"
          },
          "to": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps_lock activate",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "Change Fn CONTROL + arrow keys to scroll wheel",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "fn",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": -32,
                "speed_multiplier": 1.5
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": [
                "fn",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": 32,
                "speed_multiplier": 1.5
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "fn",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": -32,
                "speed_multiplier": 1.5
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "fn",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": 32,
                "speed_multiplier": 1.5
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Change CONTROL + arrow keys to move mouse",
      "manipulators": [
