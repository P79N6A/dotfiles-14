{
  "title": "Post left_click if buttons pressed alone",
  "rules": [
    {
      "description": "grave_accent_and_tilde to left_click",
      "manipulators": [
        {
          "from": {
            "key_code": "grave_accent_and_tilde"
          },
          "to_after_key_up": [
            {
              "pointing_button": "button1"
            }
          ],
          "to_if_held_down": [
            {
              "pointing_button": "button1",
              "halt": false,
              "hold_down_milliseconds": 30
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock to left_click (Only in browsers)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "pointing_button": "button1"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome",
                "^com\\.apple\\.Safari",
                "^com\\.apple\\.Firefox"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
