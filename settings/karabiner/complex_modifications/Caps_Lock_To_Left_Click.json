{
  "title": "Change caps_lock to left_click",
  "rules": [
    {
      "description": "Post left click if caps lock pressed alone. (Any applications)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ],
          "to_if_alone": [
            {
              "pointing_button": "button1"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250
          }
        }
      ]
    }
  ]
}
