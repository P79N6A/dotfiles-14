{
  "title": "Control Buttons Bindings",
  "rules": [
    {
      "description": "Activate Facebook Key",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "s",
              "modifiers": [
                "control"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "fn_locked",
                "value": 0
              },
              "halt": false
            },
            {
              "shell_command": "osascript -e 'display notification \"Deactivated\" with title \"System Administrator\"'"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.google.Chrome$",
                "^com.apple.Safari$",
                "^org.mozilla.firefox$",
                "^com.apple.Firefox$"
              ]
            },
            {
              "type": "variable_if",
              "name": "fn_locked",
              "value": 1
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 2000
          },
          "type": "basic"
        },
        {
          "from": {
            "key_code": "left_option"
