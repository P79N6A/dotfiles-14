{
  "title": "Complex Modifications Rules",
  "rules": [
    {
      "description": "Open Trash Folder ⌃ + ⌘ + ⌫",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": [
                "command",
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "cd ~/.Trash; open -a 'Finder' ./"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Disable ⌥ +  on browsers",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$",
                "^com\\.apple\\.Firefox$"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "pointing_button": "button2",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$",
                "^com\\.apple\\.Safari$",
                "^com\\.apple\\.Firefox$"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Navigate backward/forward when ⌃ +  on browser",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "pointing_button": "button2",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
