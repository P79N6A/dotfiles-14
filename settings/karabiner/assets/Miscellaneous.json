{
  "title": "Misc.",
  "rules": [
    {
      "description": "Open \"Mission Control\" if right_shift pressed alone 2x",
      "manipulators": [
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "mission_control"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_shift pressed",
              "value": 1
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            },
            {
              "set_variable": {
                "name": "right_shift pressed",
                "value": 1
              }
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100
          },
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "right_shift pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "right_shift pressed",
                  "value": 0
                }
              }
            ]
          },
          "type": "basic"
        }
      ]
    },
    {
      "description": "fn + period to right_click",
      "manipulators": [
        {
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "pointing_button": "button2",
              "lazy": true
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
