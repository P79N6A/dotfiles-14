{
  "title": "Scroll wheel horizontal and vertical",
  "rules": [
    {
      "description": "fn + control + up_arrow to scroll up",
      "manipulators": [
        {
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": -48
              },
              "lazy": true
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "fn + control + right_arrow to scroll right",
      "manipulators": [
        {
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": 48
              },
              "lazy": true
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "fn + control + down_arrow to scroll down",
      "manipulators": [
        {
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": 48
              },
              "lazy": true
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "fn + control + left_arrow to scroll left",
      "manipulators": [
        {
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": [
                "left_control",
                "fn"
              ]
            }
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": -48
              },
              "lazy": true
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
